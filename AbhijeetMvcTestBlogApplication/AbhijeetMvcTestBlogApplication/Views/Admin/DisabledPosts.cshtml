@model IEnumerable<AbhijeetMvcTestBlogApplication.Models.Blog>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>@Session["username"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">

        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="row justify-content-center my-4">
                <div class="col-6">
                    <img class="card-img-top" src="@Url.Content(item.Image)" alt="Card image cap">
                    <div class="card-body">
                        <h3 class="card-title">@item.Title</h3>

                        <h5 class="card-text">@item.Description</h5>
                        <br />
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group mt-4">


                                @Html.ActionLink("Enable", "Enable", new { id = item.Id }, new { @class = "btn btn-success mx-2" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        }

    </div>
</div>
